<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold mb-4">Categories</h1>

  <table class="table-auto border-collapse border border-gray-300">
    <thead>
      <tr class="bg-gray-200">
        <th class="px-4 py-2">Category</th>
        <th class="px-4 py-2">Material</th>
        <th class="px-4 py-2">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td class="px-4 py-2"><%= category.name %></td>
          <td class="px-4 py-2"><%= category.slug %></td>
          <td class="px-4 py-2">
            <%= link_to 'Show', category, class: 'btn btn-primary mr-2' %>
            <%= link_to 'Edit', edit_category_path(category), class: 'btn btn-warning mr-2' %>
            <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Category', new_category_path, class: 'btn btn-success' %>
</div>
