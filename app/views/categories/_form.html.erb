<%= form_with(model: category, local: true, class: "container mx-auto p-4") do |form| %>
  <% if category.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2 class="font-weight-bold"><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
        <% category.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mb-4">
    <%= form.label :Category, class: "font-weight-bold" %>
    <%= form.text_field :name, class: "form-control custom-input" %>
  </div>

  <div class="form-group mb-4">
    <%= form.label :Material, class: "font-weight-bold" %>
    <%= form.text_field :slug, class: "form-control custom-input" %>
  </div>

  <div class="mb-4">
    <%= form.submit "Save", class: "btn btn-primary custom-button" %>
  </div>
<% end %>
